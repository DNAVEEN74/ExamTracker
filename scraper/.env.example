# Scraper — Environment Variables
# Copy this to .env and fill in your values.

# ── Supabase (same project as the backend) ────────────────────────────────────
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ── Main App Webhook ──────────────────────────────────────────────────────────
# Points to /api/webhooks/new-pdf on your deployed backend
PARSING_WEBHOOK_URL=https://your-app.railway.app/api/webhooks/new-pdf

# Must match INTERNAL_API_SECRET in the backend .env
SCRAPER_WEBHOOK_SECRET=

# ── Scrape Config ─────────────────────────────────────────────────────────────
# Set per Railway cron service — do not set here for production
PRIORITY_FILTER=P0

# Optional: run a single site only (for debugging)
# SITE_ID=ssc

SCRAPE_CONCURRENCY=3
REQUEST_DELAY_MS=2000
REQUEST_TIMEOUT_MS=30000
LOG_LEVEL=info
